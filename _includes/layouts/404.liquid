---
layout: layouts/base.liquid
---

{% assign t = i18n[page.lang] %}

<div class="post-main">
  <header>
    <a href="{{ '/' | locale_url }}">
      <img eleventy:ignore class="logo logo-light" src="/{{ page.lang }}/assets/logo.svg" alt="SpeedBump">
      <img eleventy:ignore class="logo logo-dark" src="/{{ page.lang }}/assets/logo-dark.svg" alt="SpeedBump">
    </a>
  </header>

  <article class="post-single">
    <div class="post-header">
      <h1 class="post-title">{{ title }}</h1>
    </div>
    <div class="post-content">
      {{ content }}
      <script>document.addEventListener('DOMContentLoaded', function () { plausible('404', { props: { path: document.location.pathname } }); });</script>
    </div>

    <hr>

    <footer class="post-footer">
      <h2 style="text-align: center">{{ t.post.footer.download_prompt }}</h2>

      {% render "partials/downloads.liquid" t: t %}

      <h3 style="text-align: center"><a href="{{ '/' | locale_url }}">{{ t.post.footer.about }}</a></h2>
    </footer>
  </article>
</div>
