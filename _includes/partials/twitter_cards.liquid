{%- if image %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="{{ image | absUrl }}">
  <meta name="twitter:image:alt" content="{{ imageAlt | escapeQuotes }}">
{%- else %}
  <meta name="twitter:card" content="summary">
{%- endif %}

<meta name="twitter:title" content="{{ title | escapeQuotes | assertLengthUnder: 70 }}">
<meta name="twitter:description" content="{{ description | markdownify | plainifyHtml | escapeQuotes | assertLengthUnder: 200 }}">

<meta name="twitter:site" content="@{{ metadata.social._twitterHandle }}">
